function getQS() {
  var URL, qs, a, pos;
  URL = window.location.href;
  qs = "";
  pos = URL.indexOf("?");
  if (pos < 0) return "?promo=specialoffer";
  for (a = pos; a < URL.length; a++) {
    qs += URL.charAt(a);
  }
  return qs + "&promo=specialoffer";
}
window.onbeforeunload = areYouSure;










